<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.matchinggame.MatchingGameResultsController"
            stylesheets="@../css/matching-game-results.css"
            styleClass="results-root"
            prefWidth="980" prefHeight="700">

    <!-- Header -->
    <top>
        <VBox styleClass="results-header">
            <padding>
                <Insets top="24" right="32" bottom="24" left="32"/>
            </padding>
            <Label text="Matching Game" styleClass="results-title"/>
            <Label text="Congratulations! You've completed the game." styleClass="results-subtitle"/>
        </VBox>
    </top>

    <!-- Results Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="results-scroll">
            <VBox spacing="24" alignment="TOP_CENTER" styleClass="results-content">
                <padding>
                    <Insets top="32" right="48" bottom="32" left="48"/>
                </padding>

                <!-- Completion title -->
                <HBox spacing="12" alignment="CENTER">
                    <Label text="âœ“" styleClass="checkmark-text"/>
                    <Label text="Matching Game Complete!" styleClass="completion-title"/>
                </HBox>

                <!-- Stats Box -->
                <VBox spacing="10" styleClass="stats-box" maxWidth="700">
                    <padding>
                        <Insets top="20" right="32" bottom="20" left="32"/>
                    </padding>
                    <HBox spacing="8">
                        <Label text="Total Time (All Rounds):" styleClass="stat-label-bold"/>
                        <Label fx:id="timeLabel" text="751s" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Total Attempts:" styleClass="stat-label-bold"/>
                        <Label fx:id="attemptsLabel" text="12" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Correct:" styleClass="stat-label-bold"/>
                        <Label fx:id="correctLabel" text="10" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Incorrect:" styleClass="stat-label-bold"/>
                        <Label fx:id="incorrectLabel" text="2" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Overall Accuracy:" styleClass="stat-label-bold"/>
                        <Label fx:id="accuracyLabel" text="83%" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Overall Memory Score:" styleClass="stat-label-bold"/>
                        <Label fx:id="memoryScoreLabel" text="810" styleClass="stat-value-dark"/>
                    </HBox>
                </VBox>

                <!-- Feedback Box -->
                <VBox spacing="12" styleClass="feedback-box" maxWidth="700">
                    <padding>
                        <Insets top="20" right="32" bottom="20" left="32"/>
                    </padding>
                    <HBox spacing="8">
                        <Label text="Attention Performance Index (API):" styleClass="api-label"/>
                        <Label fx:id="apiLabel" text="59.8" styleClass="api-value"/>
                    </HBox>
                    <Label fx:id="feedbackText" wrapText="true"
                           text="Below Average Focus Consistency - Consider behavioral self-assessment."
                           styleClass="feedback-text" maxWidth="650"/>
                </VBox>

                <!-- Warning Box -->
                <VBox spacing="10" styleClass="warning-box" maxWidth="700">
                    <padding>
                        <Insets top="18" right="28" bottom="18" left="28"/>
                    </padding>
                    <Label text="Note: This tool is for research and self-awareness only."
                           styleClass="warning-text-bold" wrapText="true" maxWidth="650"/>
                    <Label text="It does not diagnose ADHD, ADD, Autism, or any medical condition."
                           styleClass="warning-text" wrapText="true" maxWidth="650"/>
                    <Label text="If significant attention variance is indicated, consider seeking a licensed clinician for formal evaluation."
                           styleClass="warning-text" wrapText="true" maxWidth="650"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="16" styleClass="results-footer">
            <padding>
                <Insets top="20" right="32" bottom="20" left="32"/>
            </padding>

            <Button text="Play again" onAction="#onPlayAgain" styleClass="btn-play-again"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home" onAction="#onHome" styleClass="btn-home"/>
        </HBox>
    </bottom>
</BorderPane>
