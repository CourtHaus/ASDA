<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.results.ResultsController">
    <top>
        <HBox spacing="8" styleClass="toolbar">
            <Label text="Results" styleClass="title" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="16" styleClass="card">
            <Label fx:id="summaryLabel" wrapText="true" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
            <Button fx:id="homeBtn" text="Back to Home" onAction="#onHome" />
        </HBox>
    </bottom>
</BorderPane>