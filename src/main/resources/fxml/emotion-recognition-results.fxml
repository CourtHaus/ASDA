<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.emotionrecognition.EmotionRecognitionResultsController"
            stylesheets="@../css/emotion-recognition-results.css"
            styleClass="results-root"
            prefWidth="980" prefHeight="700">

    <!-- Header -->
    <top>
        <VBox styleClass="results-header">
            <padding>
                <Insets top="24" right="32" bottom="24" left="32"/>
            </padding>
            <Label text="Emotion Recognition Game" styleClass="results-title"/>
            <Label text="Congratulations! You've completed the emotion recognition game." styleClass="results-subtitle"/>
        </VBox>
    </top>

    <!-- Results Content -->
    <center>
        <StackPane>
            <ImageView styleClass="corner-art-left" fitHeight="240" fitWidth="240" preserveRatio="true">
                <image>
                    <Image url="@/images/results/Frame 9.png"/>
                </image>
            </ImageView>
            <ImageView styleClass="corner-art-right" fitHeight="240" fitWidth="240" preserveRatio="true">
                <image>
                    <Image url="@/images/results/Frame 10.png"/>
                </image>
            </ImageView>

            <ScrollPane fitToWidth="true" styleClass="results-scroll">
                <VBox spacing="24" alignment="TOP_CENTER" styleClass="results-content">
                    <padding>
                        <Insets top="36" right="48" bottom="36" left="48"/>
                    </padding>

                    <VBox spacing="6" alignment="CENTER">
                        <Label text="Emotion Recognition Complete!" styleClass="completion-title"/>
                        <Label text="How accurately you identified each pattern" styleClass="completion-subtitle"/>
                    </VBox>

                    <HBox spacing="16" alignment="CENTER">
                        <VBox spacing="12" styleClass="metric-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label text="Overall Accuracy" styleClass="metric-label"/>
                            <Label fx:id="accuracyLabel" text="0%" styleClass="metric-value"/>
                            <StackPane fx:id="accuracyTrack" styleClass="bar-track" prefWidth="340" alignment="CENTER_LEFT">
                                <Region fx:id="accuracyFill" styleClass="bar-fill primary"/>
                            </StackPane>
                        </VBox>

                        <VBox spacing="12" styleClass="metric-card" alignment="CENTER" HBox.hgrow="ALWAYS">
                            <Label text="Correct Matches" styleClass="metric-label"/>
                            <Label fx:id="correctLabel" text="0" styleClass="metric-value"/>
                            <Label fx:id="totalLabel" text="of 0 patterns" styleClass="metric-sub"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="12" styleClass="bar-card" maxWidth="760">
                        <Label text="Recognition Breakdown" styleClass="bar-title"/>
                        <HBox spacing="8" alignment="CENTER_LEFT" styleClass="bar-row">
                            <Label text="Correct" styleClass="bar-label positive"/>
                            <StackPane fx:id="correctTrack" styleClass="bar-track" prefWidth="340" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                <Region fx:id="correctFill" styleClass="bar-fill positive"/>
                            </StackPane>
                            <Label fx:id="correctPercentLabel" text="0%" styleClass="bar-value"/>
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT" styleClass="bar-row">
                            <Label text="Missed" styleClass="bar-label negative"/>
                            <StackPane fx:id="incorrectTrack" styleClass="bar-track" prefWidth="340" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                <Region fx:id="incorrectFill" styleClass="bar-fill negative"/>
                            </StackPane>
                            <Label fx:id="incorrectPercentLabel" text="0%" styleClass="bar-value"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="10" styleClass="feedback-box" maxWidth="760">
                        <HBox spacing="8">
                            <Label text="Recognition Level:" styleClass="api-label"/>
                            <Label fx:id="recognitionLevelLabel" text="N/A" styleClass="api-value"/>
                        </HBox>
                        <Label fx:id="feedbackText" wrapText="true"
                               text="Feedback will appear here."
                               styleClass="feedback-text" maxWidth="700"/>
                    </VBox>

                    <VBox spacing="10" styleClass="warning-box" maxWidth="760">
                        <padding>
                            <Insets top="16" right="24" bottom="16" left="24"/>
                        </padding>
                        <Label text="Note: This tool is for research and self-awareness only."
                               styleClass="warning-text-bold" wrapText="true" maxWidth="700"/>
        <Label text="It does not diagnose any emotional or psychological condition."
               styleClass="warning-text" wrapText="true" maxWidth="700"/>
        <Label text="If you have concerns about emotional recognition, consider seeking a licensed clinician."
               styleClass="warning-text" wrapText="true" maxWidth="700"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </StackPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="16" styleClass="results-footer">
            <padding>
                <Insets top="20" right="32" bottom="20" left="32"/>
            </padding>

            <Button text="Play again" onAction="#onPlayAgain" styleClass="btn-play-again"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home" onAction="#onHome" styleClass="btn-home"/>
        </HBox>
    </bottom>
</BorderPane>
