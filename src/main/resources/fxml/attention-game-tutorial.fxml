<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.attentiongametutorial.AttentionGameTutorialController"
            styleClass="attention-tutorial-root"
            onKeyPressed="#onKeyPressed">

    <!-- Top gradient header -->
    <top>
        <StackPane styleClass="attention-tutorial-header">
            <VBox alignment="CENTER" spacing="8">
                <StackPane styleClass="attention-icon-container">
                    <Circle radius="24" styleClass="attention-icon-circle"/>
                    <Label text="ðŸ‘" styleClass="attention-icon-emoji"/>
                </StackPane>
                <Label text="Concentration &amp; Attention Game" styleClass="attention-tutorial-title"/>
                <Label text="Before We Begin" styleClass="attention-tutorial-subtitle"/>
            </VBox>
        </StackPane>
    </top>

    <!-- Scrollable content area -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="attention-tutorial-scroll">
            <VBox fx:id="contentVBox" spacing="20" styleClass="attention-tutorial-content">
                <padding>
                    <Insets top="28" right="28" bottom="28" left="28"/>
                </padding>

                <Label wrapText="true" styleClass="attention-lead-text"
                       text="Welcome to the Concentration &amp; Attention Game"/>

                <Label wrapText="true" styleClass="attention-disclaimer-text"
                       text="IMPORTANT: This game is designed for screening and self-awareness purposes only. It is not a diagnostic tool. Results do not diagnose ADHD, ADD, Autism, or any other condition. If you have concerns about attention or cognitive functioning, please consult with a licensed healthcare professional."/>

                <!-- 100 Trials Card -->
                <VBox styleClass="attention-card attention-card-teal">
                    <Label text="100 Trials" styleClass="attention-card-title"/>
                    <Label wrapText="true" styleClass="attention-card-body"
                           text="You will be shown a sequence of 100 colored shapes. Each shape appears for 1.3 seconds followed by a brief 0.7-second blank interval before the next shape."/>
                </VBox>

                <!-- Your Task Card -->
                <VBox styleClass="attention-card attention-card-blue">
                    <Label text="Your Task" styleClass="attention-card-title"/>
                    <Label wrapText="true" styleClass="attention-card-body"
                           text="Press SPACE when the current shape matches the previous one in both shape AND color. Do NOT press if the shape or color is different from the previous trial."/>
                </VBox>

                <!-- Shapes &amp; Colors Card -->
                <VBox styleClass="attention-card attention-card-teal">
                    <Label text="Shapes &amp; Colors" styleClass="attention-card-title"/>
                    <Label wrapText="true" styleClass="attention-card-body"
                           text="You will see three types of shapes: Circles, Squares, and Triangles. Each shape can appear in one of two pastel colors: Light Pink or Powder Blue. A match requires BOTH the shape AND color to be identical to the previous trial."/>
                </VBox>

                <!-- Scoring Card -->
                <VBox styleClass="attention-card attention-card-blue">
                    <Label text="Scoring" styleClass="attention-card-title"/>
                    <Label wrapText="true" styleClass="attention-card-body"
                           text="Your accuracy is tracked based on correct responses (pressing SPACE when shapes match) and correct withholding (not pressing when shapes differ). Higher accuracy indicates stronger sustained attention abilities."/>
                </VBox>

                <!-- Tips Card -->
                <VBox styleClass="attention-card attention-card-teal">
                    <Label text="Tips for Best Results" styleClass="attention-card-title"/>
                    <Label wrapText="true" styleClass="attention-card-body"
                           text="Find a quiet environment, minimize distractions, and stay focused throughout all 100 trials. The test takes approximately 3-4 minutes to complete. Keep your hand ready over the SPACE bar."/>
                </VBox>

                <!-- Privacy Box -->
                <HBox styleClass="attention-privacy-box" alignment="CENTER_LEFT" spacing="8">
                    <VBox spacing="4">
                        <Label text="ðŸ”’ Your Privacy" styleClass="attention-privacy-title"/>
                        <Label wrapText="true" styleClass="attention-privacy-text"
                               text="Your results are processed locally and stored only on your device. No data is transmitted to external servers. You can exit at any time."/>
                    </VBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer with navigation -->
    <bottom>
        <HBox alignment="CENTER" spacing="16" styleClass="attention-tutorial-footer">
            <padding>
                <Insets top="16" right="24" bottom="16" left="24"/>
            </padding>
            <Button fx:id="backButton" text="â† Back" onAction="#onBack" styleClass="btn-attention-back"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="beginButton" text="Start Game" onAction="#onBegin" styleClass="btn-attention-begin"/>
        </HBox>
    </bottom>
</BorderPane>
