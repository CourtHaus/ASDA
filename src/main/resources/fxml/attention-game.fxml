<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.attentiongame.AttentionGameController"
            fx:id="rootPane"
            styleClass="attention-game-root">

    <!-- Game Screen -->
    <top>
        <VBox styleClass="attention-game-header">
            <Label fx:id="headerLabel" wrapText="true" textAlignment="CENTER"
                   styleClass="attention-game-instruction"
                   maxWidth="700">
                <text>Press SPACE when the current shape is the same color &amp; shape as the previous one. Withhold press otherwise.</text>
            </Label>
        </VBox>
    </top>

    <center>
        <StackPane styleClass="attention-game-canvas-container">
            <Canvas fx:id="stimulusCanvas" width="500" height="400"/>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="attention-game-footer">
            <Label fx:id="statsLabel" text="Trials: 0/100   Correct: 0   Incorrect: 0   Accuracy: 0%"
                   styleClass="attention-game-stats"/>
        </HBox>
    </bottom>
</BorderPane>
