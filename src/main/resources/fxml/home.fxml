<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.group1.asda.ui.home.HomeController"
           styleClass="home-root">
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="home-scroll">
        <content>
            <StackPane alignment="TOP_CENTER">
                <VBox alignment="TOP_CENTER" spacing="0" maxWidth="1000">
                    <!-- Header Section -->
                    <VBox styleClass="home-header" alignment="CENTER">
                    <Text fx:id="title" text="ASDA" styleClass="home-title" textAlignment="CENTER">
                        <fill>
                            <LinearGradient endX="1.0" endY="0.0" startX="0.0" startY="0.0">
                                <stops>
                                    <Stop color="#c5b4e3" offset="0.0" />
                                    <Stop color="#8da9c4" offset="0.5" />
                                    <Stop color="#b0d0d3" offset="1.0" />
                                </stops>
                            </LinearGradient>
                        </fill>
                    </Text>
                    <Label text="A Safe Space to Learn and Play" styleClass="home-subtitle" wrapText="true" maxWidth="680" alignment="CENTER" />
                    </VBox>

                    <!-- Navigation Tiles (wrap on narrow widths, keep 3 across on larger screens) -->
                    <FlowPane styleClass="nav-grid" alignment="CENTER" hgap="24" vgap="24"
                              prefWrapLength="760" maxWidth="900" minWidth="0.0">
                        <!-- Questionnaire Tile -->
                        <VBox styleClass="activity-tile, tile-purple" onMouseClicked="#onStart"
                              prefWidth="200" prefHeight="180" minWidth="150" maxWidth="220">
                            <VBox styleClass="tile-content" spacing="8" alignment="CENTER" VBox.vgrow="ALWAYS">
                                <StackPane styleClass="tile-icon-container">
                                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                                        <image>
                                            <Image url="@/images/homepage/Cube 1.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <Label text="Questionnaire" styleClass="tile-label" wrapText="true" alignment="CENTER" />
                            </VBox>
                        </VBox>

                        <!-- Matching Game Tile -->
                        <VBox styleClass="activity-tile, tile-teal" onMouseClicked="#onStartMatchingGame"
                              prefWidth="200" prefHeight="180" minWidth="150" maxWidth="220">
                            <VBox styleClass="tile-content" spacing="8" alignment="CENTER" VBox.vgrow="ALWAYS">
                                <StackPane styleClass="tile-icon-container">
                                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                                        <image>
                                            <Image url="@/images/homepage/Icosahedron.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <Label text="Matching Game" styleClass="tile-label" wrapText="true" alignment="CENTER" />
                            </VBox>
                        </VBox>

                        <!-- Attention Game Tile -->
                        <VBox styleClass="activity-tile, tile-blue" onMouseClicked="#onStartAttentionGame"
                              prefWidth="200" prefHeight="180" minWidth="150" maxWidth="220">
                            <VBox styleClass="tile-content" spacing="8" alignment="CENTER" VBox.vgrow="ALWAYS">
                                <StackPane styleClass="tile-icon-container">
                                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                                        <image>
                                            <Image url="@/images/homepage/Thorus 2.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <Label text="Attention Game" styleClass="tile-label" wrapText="true" alignment="CENTER" />
                            </VBox>
                        </VBox>

                        <!-- Emotional Survey Tile -->
                        <VBox styleClass="activity-tile, tile-lavender" onMouseClicked="#onStartEmotionalSurvey"
                              prefWidth="200" prefHeight="180" minWidth="150" maxWidth="220">
                            <VBox styleClass="tile-content" spacing="8" alignment="CENTER" VBox.vgrow="ALWAYS">
                                <StackPane styleClass="tile-icon-container">
                                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                                        <image>
                                            <Image url="@/images/homepage/Sphere.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <Label text="Emotional Survey" styleClass="tile-label" wrapText="true" alignment="CENTER" />
                            </VBox>
                        </VBox>

                        <!-- Emotion Recognition Tile -->
                        <VBox styleClass="activity-tile, tile-sky" onMouseClicked="#onStartEmotionRecognition"
                              prefWidth="200" prefHeight="180" minWidth="150" maxWidth="220">
                            <VBox styleClass="tile-content" spacing="8" alignment="CENTER" VBox.vgrow="ALWAYS">
                                <StackPane styleClass="tile-icon-container">
                                    <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                                        <image>
                                            <Image url="@/images/homepage/Sphere-2.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <Label text="Emotion Recognition" styleClass="tile-label" wrapText="true" alignment="CENTER" />
                            </VBox>
                        </VBox>
                    </FlowPane>

                    <!-- Footer -->
                    <VBox styleClass="home-footer" alignment="CENTER">
                        <Label text="Select an activity to begin" styleClass="footer-caption" wrapText="true" maxWidth="640" alignment="CENTER"/>
                    </VBox>
                </VBox>
            </StackPane>
        </content>
    </ScrollPane>
</StackPane>
