<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.emotionrecognition.EmotionRecognitionResultsController"
            stylesheets="@../css/emotion-recognition-results.css"
            styleClass="results-root"
            prefWidth="980" prefHeight="700">

    <!-- Header -->
    <top>
        <VBox styleClass="results-header">
            <padding>
                <Insets top="24" right="32" bottom="24" left="32"/>
            </padding>
            <Label text="Emotion Recognition Game" styleClass="results-title"/>
            <Label text="Congratulations! You've completed the emotion recognition game." styleClass="results-subtitle"/>
        </VBox>
    </top>

    <!-- Results Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="results-scroll">
            <VBox spacing="24" alignment="TOP_CENTER" styleClass="results-content">
                <padding>
                    <Insets top="32" right="48" bottom="32" left="48"/>
                </padding>

                <!-- Completion title -->
                <HBox spacing="12" alignment="CENTER">
                    <Label text="âœ“" styleClass="checkmark-text"/>
                    <Label text="Emotion Recognition Complete!" styleClass="completion-title"/>
                </HBox>

                <!-- Stats Box -->
                <VBox spacing="10" styleClass="stats-box" maxWidth="700">
                    <padding>
                        <Insets top="20" right="32" bottom="20" left="32"/>
                    </padding>
                    <HBox spacing="8">
                        <Label text="Correct Identifications:" styleClass="stat-label-bold"/>
                        <Label fx:id="correctLabel" text="0" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Total Emotions:" styleClass="stat-label-bold"/>
                        <Label fx:id="totalLabel" text="0" styleClass="stat-value-dark"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Accuracy:" styleClass="stat-label-bold"/>
                        <Label fx:id="accuracyLabel" text="0.0%" styleClass="stat-value-dark"/>
                    </HBox>
                </VBox>

                <!-- Feedback Box -->
                <VBox spacing="12" styleClass="feedback-box" maxWidth="700">
                    <padding>
                        <Insets top="20" right="32" bottom="20" left="32"/>
                    </padding>
                    <HBox spacing="8">
                        <Label text="Recognition Level:" styleClass="api-label"/>
                        <Label fx:id="recognitionLevelLabel" text="N/A" styleClass="api-value"/>
                    </HBox>
                    <Label fx:id="feedbackText" wrapText="true"
                           text="Feedback will appear here."
                           styleClass="feedback-text" maxWidth="650"/>
                </VBox>

                <!-- Warning Box -->
                <VBox spacing="10" styleClass="warning-box" maxWidth="700">
                    <padding>
                        <Insets top="18" right="28" bottom="18" left="28"/>
                    </padding>
                    <Label text="Note: This tool is for research and self-awareness only."
                           styleClass="warning-text-bold" wrapText="true" maxWidth="650"/>
                    <Label text="It does not diagnose any emotional or psychological condition."
                           styleClass="warning-text" wrapText="true" maxWidth="650"/>
                    <Label text="If you have concerns about emotional recognition, consider seeking a licensed clinician."
                           styleClass="warning-text" wrapText="true" maxWidth="650"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="16" styleClass="results-footer">
            <padding>
                <Insets top="20" right="32" bottom="20" left="32"/>
            </padding>

            <Button text="Play again" onAction="#onPlayAgain" styleClass="btn-play-again"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Home" onAction="#onHome" styleClass="btn-home"/>
        </HBox>
    </bottom>
</BorderPane>
