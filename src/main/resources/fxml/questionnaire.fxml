<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group1.asda.ui.questionnaire.QuestionnaireController"
            styleClass="assessment-root">

    <!-- Header with gradient background -->
    <top>
        <StackPane styleClass="assessment-header">
            <VBox alignment="CENTER" spacing="0">
                <Label text="Assessment" styleClass="header-title" />
            </VBox>
            <HBox alignment="TOP_RIGHT">
                <padding>
                    <Insets top="30" right="40" />
                </padding>
                <Label fx:id="counterLabel" text="Question 1 of 50" styleClass="question-counter" />
            </HBox>
        </StackPane>
    </top>

    <!-- Main question section -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="question-scroll">
            <content>
                <StackPane alignment="TOP_CENTER">
                    <VBox styleClass="question-section" spacing="20" alignment="TOP_CENTER" maxWidth="920"
                          minWidth="0.0" fillWidth="true">
                        <padding>
                            <Insets top="40" right="24" bottom="40" left="24" />
                        </padding>

                        <!-- Question label and text -->
                        <VBox alignment="TOP_LEFT" spacing="8" fillWidth="true" minWidth="0.0">
                            <Label fx:id="questionNumberLabel" text="Question 1:" styleClass="question-label"
                                   maxWidth="1.7976931348623157E308" wrapText="true" />
                            <Label fx:id="questionLabel" wrapText="true" styleClass="question-text"
                                   text="S/he prefers to do things with others rather than on her/his own."
                                   maxWidth="1.7976931348623157E308" minWidth="0.0" />
                        </VBox>

                        <!-- Answer options - all options have equal width -->
                        <VBox spacing="18" styleClass="options-container" alignment="CENTER" fillWidth="true" minWidth="0.0">
                            <RadioButton fx:id="opt1" text="Definitely Agree" styleClass="option-button"
                                         wrapText="true" minWidth="0.0" maxWidth="1.7976931348623157E308" />
                            <RadioButton fx:id="opt2" text="Slightly Agree" styleClass="option-button"
                                         wrapText="true" minWidth="0.0" maxWidth="1.7976931348623157E308" />
                            <RadioButton fx:id="opt3" text="Slightly Disagree" styleClass="option-button"
                                         wrapText="true" minWidth="0.0" maxWidth="1.7976931348623157E308" />
                            <RadioButton fx:id="opt4" text="Definitely Disagree" styleClass="option-button"
                                         wrapText="true" minWidth="0.0" maxWidth="1.7976931348623157E308" />
                        </VBox>
                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </center>

    <!-- Footer with progress and navigation -->
    <bottom>
        <HBox styleClass="assessment-footer" alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" right="80" bottom="30" left="80" />
            </padding>

            <!-- Progress dots section -->
            <HBox spacing="12" alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label fx:id="prevArrow" text="◀" styleClass="progress-arrow" />
                <HBox fx:id="progressDotsContainer" spacing="12" alignment="CENTER" />
                <Label fx:id="nextArrow" text="▶" styleClass="progress-arrow" />
            </HBox>

            <!-- Navigation buttons -->
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button fx:id="backBtn" text="← Back" onAction="#onBack" styleClass="btn-back" />
                <Button fx:id="nextBtn" text="Next →" onAction="#onNext" styleClass="btn-next" />
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
